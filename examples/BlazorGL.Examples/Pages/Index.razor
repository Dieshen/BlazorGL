@code {
    private string quickStartCode = @"// In your Blazor component
@inject IJSRuntime JSRuntime

<canvas @ref=""canvasRef""></canvas>

@code {
    private ElementReference canvasRef;
    private Renderer renderer;
    private Scene scene;
    private PerspectiveCamera camera;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (!firstRender) return;

        // Initialize renderer
        renderer = new Renderer();
        await renderer.InitializeAsync(canvasRef, JSRuntime);

        // Create scene and camera
        scene = new Scene();
        camera = new PerspectiveCamera(75, 16f/9f, 0.1f, 1000f);
        camera.Position = new Vector3(0, 0, 5);

        // Add a cube
        var geometry = new BoxGeometry(1, 1, 1);
        var material = new StandardMaterial { Color = new Color(0.5f, 0.8f, 0.3f) };
        var cube = new Mesh(geometry, material);
        scene.Add(cube);

        // Add light
        var light = new DirectionalLight(Color.White, 1.0f);
        light.Position = new Vector3(5, 5, 5);
        scene.Add(light);

        // Render
        renderer.Render(scene, camera);
    }
}";
}
